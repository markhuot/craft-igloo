{{ hiddenInput('elementType', elementType) }}
{{ hiddenInput('elementId', elementId) }}
{{ hiddenInput('fieldHandle', fieldHandle) }}
{% set sections = craft.app.sections.getAllSections() %}
{% set actionData = {
    elementId: elementId,
    fieldHandle: fieldHandle,
} %}

<h2>New Content</h2>
<table>
    {% for section in sections %}
        <tr>
            <td>
                <a href="#"
                   data-igloo-action="entries/create"
                   data-igloo-action-data='{{ {
                       siteId: craft.app.sites.currentSite.id,
                       section: section.handle,
                       iglooAction: 'createAndAttach',
                       iglooElement: elementId,
                       iglooSlot: fieldHandle,
                   }|json_encode }}'
                   data-igloo-slideout-action="replace"
                >
                    {{ section.name }}
                </a>
            </td>
        </tr>
    {% endfor %}
</table>

<h2>Existing Content</h2>

<table>
    {% for element in elements %}
        <tr>
            <td><input type="checkbox" name="elements[]" value="{{ element.id }}" /></td>
            <td>{{ element.title }}</td>
        </tr>
    {% endfor %}
</table>
